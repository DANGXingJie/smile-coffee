{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@/components/uni-$1.vue",
      "^tn-(.*)-(item|group)$": "@tuniao/tnui-vue3-uniapp/components/$1/src/$1-$2.vue",
      "^tn-(.*)": "@tuniao/tnui-vue3-uniapp/components/$1/src/$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "index",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/card/index",
      "style": {
        "navigationBarTitleText": "Cart",
        "onReachBottomDistance": 150
      }
    },
    {
      "path": "pages/favourite/index",
      "style": {
        "navigationBarTitleText": "Favourite"
      }
    },
    {
      "path": "pages/user/index",
      "style": {
        "navigationBarTitleText": "User"
      }
    }
  ],
  //开启分包
  "subPackages": [
    {
      "root": "subpkg_pages",
      "pages": [
        {
          "path": "login/index",
          "style": { "navigationBarTitleText": "login" }
        },
        {
          "path": "coffee/detail",
          "style": { "navigationBarTitleText": "", "navigationStyle": "custom" }
        }
      ]
    }
  ],
  //分包预加载
  "preloadRule": {
    // "pages/index/index": {
    //   "network": "all",
    //   "packages": ["__APP__"]
    // },
    "subpkg_pages/login/index": {
      "network": "all",
      "packages": ["subpkg_pages"]
    }
  },

  "tabBar": {
    "color": "#333333",
    "selectedColor": "#B7343D",
    "backgroundColor": "#ffffff",
    "position": "bottom",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/images/home.png",
        "selectedIconPath": "static/images/home.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/card/index",
        "iconPath": "static/images/card.png",
        "selectedIconPath": "static/images/card.png",
        "text": "菜单"
      },
      {
        "pagePath": "pages/favourite/index",
        "iconPath": "static/images/favourite.png",
        "selectedIconPath": "static/images/favourite.png",
        "text": "卡包"
      },
      {
        "pagePath": "pages/user/index",
        "iconPath": "static/images/user.png",
        "selectedIconPath": "static/images/user.png",
        "text": "我的"
      }
    ]
  },

  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
